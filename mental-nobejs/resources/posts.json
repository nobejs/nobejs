{
  "name": "post",
  "sql_table": "posts",
  "label": "Posts",
  "attributes": [
    {
      "name": "uuid",
      "type": "uuid",
      "label": "Identifier",
      "primary": true,
      "value": "fn:uuid"
    },
    {
      "name": "title",
      "type": "string",
      "label": "Title",
      "description": "This would be the title of the post",
      "validators": ["required"]
    },
    {
      "name": "creator",
      "label": "Author",
      "type": "relation",
      "relation": "belongsTo",
      "resource": "author",
      "source_column": "author_uuid"
    },
    {
      "name": "categories",
      "label": "Categories",
      "type": "relation",
      "relation": "manyToMany",
      "resource": "category",
      "pivot_table": "category_posts",
      "source_column": "post_uuid",
      "relations_column": "category_uuid"
    },
    {
      "name": "published_at",
      "label": "Published at",
      "type": "datetime",
      "value": "fn:now"
    },
    {
      "name": "body",
      "label": "Body",
      "type": "editor"
    },
    {
      "name": "meta",
      "label": "Meta",
      "type": "object"
    }
  ],
  "hooks": {
    "afterCreate": "createCamsRequest"
  }
}
