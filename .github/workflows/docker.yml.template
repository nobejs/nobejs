name: Docker CD

on:
  release:
    types: [published]

jobs:
  build-push:
    runs-on: ubuntu-latest

    steps:
      - uses: actions/checkout@v2

      - name: docker login
        env:
          DOCKERHUB_USERNAME: ${{ secrets.DOCKERHUB_USERNAME }}   
          DOCKERHUB_TOKEN: ${{ secrets.DOCKERHUB_TOKEN }}  
        run: |
          docker login -u $DOCKERHUB_USERNAME -p "$DOCKERHUB_TOKEN"

      - name: Get the version
        id: get_version
        run: echo ::set-output name=VERSION::$(echo $GITHUB_REF | cut -d / -f 3)
        
      - name: Echo
        run: echo nobedocker/access:${{ steps.get_version.outputs.VERSION }}

      - name: docker build teams
        run: |
          docker build . -t nobedocker/access:${{ steps.get_version.outputs.VERSION }}

      - name: docker push
        run: |
          docker push nobedocker/access:${{ steps.get_version.outputs.VERSION }}