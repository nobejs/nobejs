{
  "name": "post",
  "sql_table": "posts",
  "label": "Posts",
  "attributes": [
    {
      "name": "title",
      "type": "string",
      "label": "Title",
      "description": "This would be the title of the post",
      "validation": [
        "required",
        { "type": "custom", "function": "uniqueInTableForAnAuthor" }
      ],
      "authorization": ["create_post"]
    },
    {
      "name": "author",
      "label": "Author",
      "type": "relation",
      "relation": "hasOne"
    },
    {
      "name": "categories",
      "label": "Categories",
      "type": "relation",
      "relation": "hasMany"
    },
    {
      "name": "published_at",
      "label": "Published at",
      "type": "datetime"
    },
    {
      "name": "body",
      "label": "Body",
      "type": "editor"
    }
  ],
  "hooks": {
    "afterCreate": "createCamsRequest"
  }
}
