{
  "name": "post",
  "sql_table": "posts",
  "label": "Posts",
  "attributes": [
    {
      "name": "title",
      "type": "string",
      "label": "Title",
      "description": "This would be the title of the post",
      "validators": ["required"],
      "authorization": ["create_post"]
    },
    {
      "name": "author",
      "label": "Author",
      "type": "relation",
      "relation": "belongsTo",
      "current_matching_column": "author_uuid",
      "external_matching_column": "uuid"
    },
    {
      "name": "published_at",
      "label": "Published at",
      "type": "datetime"
    },
    {
      "name": "body",
      "label": "Body",
      "type": "editor"
    }
  ],
  "hooks": {
    "afterCreate": "createCamsRequest"
  }
}
